@model IEnumerable<WebDoDungNhaBep.Models.DonHang>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
}

<h2 class="text-center text-primary mb-4">Danh sách đơn hàng</h2>

@foreach (var dh in Model)
{
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <span>Đơn hàng #@dh.MaDonHang</span>
            <span>Ngày đặt: @(dh.NgayDat?.ToString("dd/MM/yyyy HH:mm") ?? "Không rõ")</span>
        </div>

        <div class="card-body">
            <p><strong>Tổng tiền:</strong> <span class="text-danger fw-bold">@dh.TongTien.ToString("N0")₫</span></p>

            <a asp-controller="DonHang"
               asp-action="ChiTietDonHang"
               asp-route-id="@dh.MaDonHang"
               class="btn btn-outline-primary btn-sm">
                Xem chi tiết
            </a>

        </div>
    </div>
}
