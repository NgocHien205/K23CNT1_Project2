@model List<WebDoDungNhaBep.Models.GioHang>

@{
    ViewData["Title"] = "Giỏ hàng";
    decimal tongTien = 0;
}

<h2 class="text-center mb-4 text-primary fw-bold">🛒 Giỏ hàng của bạn</h2>

@if (TempData["ThongBao"] != null)
{
    <div class="alert alert-success text-center">@TempData["ThongBao"]</div>
}

@if (Model == null || !Model.Any())
{
    <div class="text-center text-muted mt-4">
        <i class="fa-solid fa-cart-shopping fa-3x mb-3"></i>
        <p>Giỏ hàng của bạn đang trống. <a asp-controller="SanPham" asp-action="Index">Mua sắm ngay!</a></p>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered align-middle text-center shadow-sm">
            <thead class="table-info text-primary">
                <tr>
                    <th style="width:30%">Tên sản phẩm</th>
                    <th>Giá</th>
                    <th style="width:15%">Số lượng</th>
                    <th>Thành tiền</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var gia = item.MaSanPhamNavigation.Gia;
                    var thanhTien = gia * item.SoLuong;
                    tongTien += thanhTien;

                    <tr>
                        <td class="text-start ps-4">@item.MaSanPhamNavigation.TenSanPham</td>
                        <td>@gia.ToString("N0") đ</td>
                        <td>
                            <form asp-action="CapNhatSoLuong" method="post" class="d-inline">
                                <input type="hidden" name="maSanPham" value="@item.MaSanPham" />
                                <div class="input-group input-group-sm justify-content-center">
                                    <input type="number" name="soLuong" value="@item.SoLuong" min="1" class="form-control text-center" style="max-width:70px;" />
                                    <button type="submit" class="btn btn-outline-primary" title="Cập nhật số lượng">
                                        <i class="fa-solid fa-rotate"></i>
                                    </button>
                                </div>
                            </form>
                        </td>
                        <td>@thanhTien.ToString("N0") đ</td>
                        <td>
                            <a asp-action="XoaKhoiGio" asp-route-maSanPham="@item.MaSanPham" class="btn btn-sm btn-danger" title="Xóa sản phẩm">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-3">
        <h5 class="text-danger fw-bold">Tổng tiền: @tongTien.ToString("N0") đ</h5>
        <a asp-action="DatHang" class="btn btn-success btn-lg">
            <i class="fa-solid fa-check"></i> Đặt hàng ngay
        </a>
    </div>
}
