@model WebDoDungNhaBep.Models.SanPham

@{
    ViewData["Title"] = "Chi Tiết Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Share/_LayoutAdmin.cshtml";
}

<h1 class="mb-4 text-center text-primary fw-bold">@ViewData["Title"]</h1>

<div class="card shadow-sm border-0 mb-4">
    <div class="row g-0">
        <div class="col-md-4 text-center p-3">
            @if (!string.IsNullOrEmpty(Model.HinhAnh))
            {
                <img src="@Model.HinhAnh" class="img-fluid rounded" alt="@Model.TenSanPham" style="max-height:300px; object-fit:cover;">
            }
            else
            {
                <img src="~/images/no-image.png" class="img-fluid rounded" alt="No Image" style="max-height:300px; object-fit:cover;">
            }
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h3 class="card-title fw-bold mb-3">@Model.TenSanPham</h3>
                <p class="card-text text-success fw-bold fs-4">@Model.Gia.ToString("C")</p>
                <p class="card-text"><strong>Số lượng:</strong> @Model.SoLuong</p>
                <p class="card-text"><strong>Danh mục:</strong> @Model.MaDanhMucNavigation?.TenDanhMuc</p>
                <p class="card-text"><strong>Mô tả:</strong> @Model.MoTa</p>

                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@Model?.MaSanPham" class="btn btn-warning me-2">
                        <i class="fa fa-pen me-1"></i> Chỉnh sửa
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fa fa-arrow-left me-1"></i> Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
