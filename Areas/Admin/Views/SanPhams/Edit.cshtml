@model WebDoDungNhaBep.Models.SanPham

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    Layout = "~/Areas/Admin/Views/Share/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2 class="fw-bold text-primary">✏️ Chỉnh sửa sản phẩm</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaSanPham" />

                <div class="form-group mb-3">
                    <label asp-for="TenSanPham" class="form-label"></label>
                    <input asp-for="TenSanPham" class="form-control" />
                    <span asp-validation-for="TenSanPham" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Gia" class="form-label"></label>
                    <input asp-for="Gia" class="form-control" />
                    <span asp-validation-for="Gia" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SoLuong" class="form-label"></label>
                    <input asp-for="SoLuong" class="form-control" />
                    <span asp-validation-for="SoLuong" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MoTa" class="form-label"></label>
                    <textarea asp-for="MoTa" class="form-control"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MaDanhMuc" class="form-label">Danh mục</label>
                    <select asp-for="MaDanhMuc" class="form-select" asp-items="ViewBag.MaDanhMuc"></select>
                    <span asp-validation-for="MaDanhMuc" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="HinhAnh" class="form-label">Hình ảnh</label>
                    <select asp-for="HinhAnh" class="form-select" asp-items="ViewBag.HinhAnh" onchange="previewImage(this)">
                        <option value="">-- Chọn ảnh --</option>
                    </select>
                    <span asp-validation-for="HinhAnh" class="text-danger"></span>
                </div>

                <!-- Hiển thị ảnh hiện tại -->
                <div class="mb-3">
                    <p><strong>Ảnh hiện tại:</strong></p>
                    @if (!string.IsNullOrEmpty(Model.HinhAnh))
                    {
                        <img src="@Model.HinhAnh" alt="Ảnh hiện tại" class="img-thumbnail shadow-sm" style="max-width:200px;" />
                    }
                    else
                    {
                        <span class="text-muted">Chưa có ảnh</span>
                    }
                </div>

                <!-- Preview ảnh mới chọn -->
                <div class="mb-3">
                    <p><strong>Xem trước ảnh mới:</strong></p>
                    <img id="imgPreview" src="" alt="Preview" class="img-thumbnail shadow-sm" style="max-width:200px; display:none;" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function previewImage(select) {
            var img = document.getElementById("imgPreview");
            if (select.value) {
                img.src = select.value;
                img.style.display = "block";
            } else {
                img.style.display = "none";
            }
        }
    </script>
}
