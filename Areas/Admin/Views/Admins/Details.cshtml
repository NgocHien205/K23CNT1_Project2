@model WebDoDungNhaBep.Models.Admin

@{
    ViewData["Title"] = "Chi tiết Admin";
    Layout = "~/Areas/Admin/Views/Share/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary fw-bold mb-4">Chi tiết tài khoản Admin</h2>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">Họ tên</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.HoTen)</dd>

                <dt class="col-sm-3 fw-bold">Địa chỉ</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DiaChi)</dd>

                <dt class="col-sm-3 fw-bold">Số điện thoại</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SoDienThoai)</dd>

                <dt class="col-sm-3 fw-bold">Tên đăng nhập</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TenDangNhap)</dd>

                <dt class="col-sm-3 fw-bold">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3 fw-bold">Mật khẩu</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MatKhau)</dd>

                <dt class="col-sm-3 fw-bold">Vai trò</dt>
                <dd class="col-sm-9">
                    @(Model.VaiTro == 1 ? "Admin" : "User")
                </dd>

                <dt class="col-sm-3 fw-bold">Trạng thái</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TrangThai)</dd>

                <dt class="col-sm-3 fw-bold">Ngày tạo</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NgayTao)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.MaAdmin" class="btn btn-warning me-2">
            <i class="bi bi-pencil-square"></i> Sửa
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
    </div>
</div>
