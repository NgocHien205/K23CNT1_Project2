@model WebDoDungNhaBep.Models.Admin

@{
    ViewData["Title"] = "Thêm Admin";
    Layout = "~/Areas/Admin/Views/Share/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-user-shield me-2"></i>Thêm quản trị viên</h4>
            <a asp-action="Index" class="btn btn-outline-light btn-sm">
                <i class="fas fa-arrow-left"></i> Quay lại danh sách
            </a>
        </div>

        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="HoTen" class="form-label fw-semibold">Họ và tên</label>
                        <input asp-for="HoTen" class="form-control" placeholder="Nhập họ tên..." required />
                        <span asp-validation-for="HoTen" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="TenDangNhap" class="form-label fw-semibold">Tên đăng nhập</label>
                        <input asp-for="TenDangNhap" class="form-control" placeholder="Nhập tên đăng nhập..." required />
                        <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Email" class="form-label fw-semibold">Email</label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="example@email.com" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="MatKhau" class="form-label fw-semibold">Mật khẩu</label>
                        <input asp-for="MatKhau" class="form-control" type="password" placeholder="Nhập mật khẩu..." required />
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="SoDienThoai" class="form-label fw-semibold">Số điện thoại</label>
                        <input asp-for="SoDienThoai" class="form-control" placeholder="Nhập số điện thoại..." required />
                        <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="DiaChi" class="form-label fw-semibold">Địa chỉ</label>
                        <input asp-for="DiaChi" class="form-control" placeholder="Nhập địa chỉ..." required />
                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="VaiTro" class="form-label fw-semibold">Vai trò</label>
                        <select asp-for="VaiTro" class="form-select" required>
                            <option value="">-- Chọn vai trò --</option>
                            <option value="Admin">Admin</option>
                            <option value="Nhân viên">Nhân viên</option>
                            <option value="Quản lý">Quản lý</option>
                        </select>
                        <span asp-validation-for="VaiTro" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 text-end">
                    <button type="submit" class="btn btn-dark px-4">
                        <i class="fas fa-save me-1"></i> Lưu thông tin
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="fas fa-times me-1"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
