@model WebDoDungNhaBep.Models.Admin

@{
    ViewData["Title"] = "Xóa Admin";
    Layout = "~/Areas/Admin/Views/Share/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="fas fa-trash-alt me-2"></i>Xóa quản trị viên
            </h4>
            <a asp-action="Index" class="btn btn-outline-light btn-sm">
                <i class="fas fa-arrow-left"></i> Quay lại danh sách
            </a>
        </div>

        <div class="card-body">
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Bạn có chắc chắn muốn xóa tài khoản này?</strong><br />
                Hành động này <span class="text-danger fw-bold">không thể hoàn tác</span>.
            </div>

            <table class="table table-bordered align-middle">
                <tbody>
                    <tr>
                        <th width="25%" class="bg-light text-dark">Họ và tên</th>
                        <td>@Html.DisplayFor(model => model.HoTen)</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-dark">Tên đăng nhập</th>
                        <td>@Html.DisplayFor(model => model.TenDangNhap)</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-dark">Email</th>
                        <td>@Html.DisplayFor(model => model.Email)</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-dark">Số điện thoại</th>
                        <td>@Html.DisplayFor(model => model.SoDienThoai)</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-dark">Địa chỉ</th>
                        <td>@Html.DisplayFor(model => model.DiaChi)</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-dark">Vai trò</th>
                        <td>@Html.DisplayFor(model => model.VaiTro)</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-dark">Trạng thái</th>
                        <td>@Html.DisplayFor(model => model.TrangThai)</td>
                    </tr>
                    <tr>
                        <th class="bg-light text-dark">Ngày tạo</th>
                        <td>@Model.NgayTao?.ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                </tbody>
            </table>

            <form asp-action="Delete" method="post" class="text-end mt-4">
                <input type="hidden" asp-for="MaAdmin" />
                <button type="submit" class="btn btn-danger px-4">
                    <i class="fas fa-trash-alt me-1"></i> Xóa
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="fas fa-times me-1"></i> Hủy
                </a>
            </form>
        </div>
    </div>
</div>
