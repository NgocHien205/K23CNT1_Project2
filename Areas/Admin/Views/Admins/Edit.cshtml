@model WebDoDungNhaBep.Models.Admin

@{
    ViewData["Title"] = "Chỉnh sửa Admin";
    Layout = "~/Areas/Admin/Views/Share/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary fw-bold mb-4">Chỉnh sửa thông tin Admin</h2>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="MaAdmin" />

                <div class="mb-3">
                    <label asp-for="HoTen" class="form-label fw-semibold">Họ tên</label>
                    <input asp-for="HoTen" class="form-control" placeholder="Nhập họ tên..." />
                    <span asp-validation-for="HoTen" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DiaChi" class="form-label fw-semibold">Địa chỉ</label>
                    <input asp-for="DiaChi" class="form-control" placeholder="Nhập địa chỉ..." />
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SoDienThoai" class="form-label fw-semibold">Số điện thoại</label>
                    <input asp-for="SoDienThoai" class="form-control" placeholder="Nhập số điện thoại..." />
                    <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TenDangNhap" class="form-label fw-semibold">Tên đăng nhập</label>
                    <input asp-for="TenDangNhap" class="form-control" placeholder="Tên đăng nhập..." />
                    <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Nhập email..." />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MatKhau" class="form-label fw-semibold">Mật khẩu</label>
                    <input asp-for="MatKhau" class="form-control" type="password" placeholder="Nhập mật khẩu..." />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="VaiTro" class="form-label fw-semibold">Vai trò</label>
                    <select asp-for="VaiTro" class="form-select">
                        <option value="1" selected="@Model.VaiTro">Admin</option>
                        <option value="2" selected="@Model.VaiTro">User</option>
                    </select>
                    <span asp-validation-for="VaiTro" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TrangThai" class="form-label fw-semibold">Trạng thái</label>
                    <select asp-for="TrangThai" class="form-select">
                        <option value="Hoạt động" selected="@Model.TrangThai">Hoạt động</option>
                        <option value="Khóa" selected="@Model.TrangThai">Khóa</option>
                    </select>
                    <span asp-validation-for="TrangThai" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NgayTao" class="form-label fw-semibold">Ngày tạo</label>
                    <input asp-for="NgayTao" class="form-control" type="date" />
                    <span asp-validation-for="NgayTao" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
