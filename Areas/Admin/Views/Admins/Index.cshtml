@model IEnumerable<WebDoDungNhaBep.Models.Admin>

@{
    ViewData["Title"] = "Quản lý Admin/User";
    Layout = "~/Areas/Admin/Views/Share/_LayoutAdmin.cshtml";
}

<style>
    /* 🎨 ======= TỔNG THỂ ======= */
    body {
        color: #212529;
        background-color: #f8f9fa;
        font-family: "Segoe UI", Roboto, sans-serif;
    }

    h1.h3.text-gray-800 {
        color: #111;
        font-weight: 700;
    }

    /* ======= NÚT THÊM ======= */
    .btn-primary {
        background: linear-gradient(90deg, #007bff, #4dabf7);
        border: none;
        font-weight: 500;
        border-radius: 6px;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, #0069d9, #339af0);
            transform: translateY(-1px);
        }

    /* ======= CARD DANH SÁCH ======= */
    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 0 12px rgba(0,0,0,0.08);
    }

    .card-header {
        background: linear-gradient(90deg, #0d6efd 0%, #4dabf7 100%);
        color: white;
        font-weight: 600;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }

    /* ======= Ô TÌM KIẾM ======= */
    .form-control, .form-select {
        border-radius: 6px;
        border-color: #ced4da;
        color: #212529;
    }

        .form-control:focus, .form-select:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.15rem rgba(13,110,253,.25);
        }

    /* ======= BẢNG DANH SÁCH ======= */
    .table thead th {
        background-color: #e9ecef !important;
        color: #000 !important;
        font-weight: 600;
        text-transform: uppercase;
    }

    .table td, .table th {
        color: #212529;
        vertical-align: middle;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f3f5;
    }

    .table-bordered {
        border-color: #dee2e6 !important;
    }

    /* ======= NÚT TRONG BẢNG ======= */
    .btn-info, .btn-warning, .btn-danger {
        border: none;
        color: white;
        font-size: 14px;
        border-radius: 6px;
        padding: 6px 10px;
    }

    .btn-info {
        background-color: #17a2b8;
    }

    .btn-warning {
        background-color: #ffc107;
        color: #212529;
    }

    .btn-danger {
        background-color: #dc3545;
    }

    .btn-info:hover {
        background-color: #138496;
    }

    .btn-warning:hover {
        background-color: #e0a800;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    /* ======= BADGE TRẠNG THÁI ======= */
    .badge {
        padding: 6px 10px;
        border-radius: 8px;
        font-weight: 500;
        font-size: 13px;
    }

        .badge.bg-warning {
            background-color: #ffc107 !important;
            color: #212529;
        }

        .badge.bg-primary {
            background-color: #0d6efd !important;
        }

        .badge.bg-info {
            background-color: #17a2b8 !important;
        }

        .badge.bg-success {
            background-color: #198754 !important;
        }

        .badge.bg-danger {
            background-color: #dc3545 !important;
        }

    /* ======= MODAL ======= */
    .modal-content {
        border-radius: 10px;
        box-shadow: 0 0 12px rgba(0,0,0,0.15);
    }

    .modal-header.bg-primary {
        background: linear-gradient(90deg, #007bff 0%, #4dabf7 100%) !important;
    }

    .modal-header.bg-info {
        background: linear-gradient(90deg, #17a2b8 0%, #5bc0de 100%) !important;
    }

    .modal-header.bg-danger {
        background: linear-gradient(90deg, #dc3545 0%, #f87171 100%) !important;
    }

    /* ======= ALERT ======= */
    .alert {
        border-radius: 8px;
        font-weight: 500;
    }

    /* ======= HIỆU ỨNG NHẸ ======= */
    .table-responsive {
        animation: fadeIn 0.4s ease-in-out;
    }

  
</style>



<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-gray-800">
            <i class="fas fa-users me-2"></i>Quản lý Admin/User
        </h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Thêm mới
        </a>
    </div>

    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-list me-1"></i>Danh sách Admin/User
            </h6>
            <div class="input-group" style="width: 300px;">
                <input type="text" class="form-control" placeholder="Tìm kiếm..." id="searchInput">
                <button class="btn btn-outline-secondary" type="button" onclick="searchAdmins()">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="table-dark">
                        <tr>
                            <th width="5%">Mã</th>
                            <th width="15%">Họ tên</th>
                            <th width="15%">Tên đăng nhập</th>
                            <th width="15%">Email</th>
                            <th width="10%">Số điện thoại</th>
                            <th width="10%">Vai trò</th>
                            <th width="10%">Trạng thái</th>
                            <th width="15%">Ngày tạo</th>
                            <th width="10%">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fw-bold">#@item.MaAdmin</td>
                                    <td>@item.HoTen</td>
                                    <td>@item.TenDangNhap</td>
                                    <td>@item.Email</td>
                                    <td>@(item.SoDienThoai ?? "N/A")</td>
                                    <td>
                                        <span class="badge @GetRoleBadgeClass(item.VaiTro)">
                                            @GetRoleDisplayName(item.VaiTro)
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(item.TrangThai)">
                                            @(item.TrangThai ?? "Active")
                                        </span>
                                    </td>
                                    <td>@(item.NgayTao?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@item.MaAdmin"
                                               class="btn btn-info" title="Xem chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.MaAdmin"
                                               class="btn btn-warning" title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.MaAdmin"
                                               class="btn btn-danger" title="Xóa">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center py-4">
                                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">Không có dữ liệu Admin/User</p>
                                    <a asp-action="Create" class="btn btn-primary mt-2">
                                        <i class="fas fa-plus me-1"></i> Thêm Admin/User đầu tiên
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination (có thể thêm nếu cần) -->
            @if (Model != null && Model.Any())
            {
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <div class="text-muted">
                        Hiển thị <strong>@Model.Count()</strong> kết quả
                    </div>
                    <!-- Có thể thêm phân trang ở đây nếu cần -->
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function searchAdmins() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const rows = document.querySelectorAll('#dataTable tbody tr');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        // Tự động tìm kiếm khi nhập
        document.getElementById('searchInput').addEventListener('keyup', searchAdmins);

        // Auto-hide alerts after 5 seconds
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}

@functions {
    // Hàm hỗ trợ để lấy class badge cho vai trò
    public string GetRoleBadgeClass(int vaiTro)
    {
        return vaiTro switch
        {
            1 => "bg-danger",     // Super Admin
            2 => "bg-primary",    // Admin
            3 => "bg-success",    // User
            _ => "bg-secondary"   // Mặc định
        };
    }

    // Hàm hỗ trợ để lấy tên hiển thị cho vai trò
    public string GetRoleDisplayName(int vaiTro)
    {
        return vaiTro switch
        {
            1 => "User",
            2 => "Admin",
            3 => "Coder",
            _ => "Không xác định"
        };
    }

    // Hàm hỗ trợ để lấy class badge cho trạng thái
    public string GetStatusBadgeClass(string? trangThai)
    {
        if (string.IsNullOrEmpty(trangThai))
            return "bg-success";

        return trangThai.ToLower() switch
        {
            "active" => "bg-success",
            "inactive" => "bg-secondary",
            "locked" => "bg-danger",
            "pending" => "bg-warning",
            _ => "bg-info"
        };
    }
}